{
  "extends": ["eslint:recommended", "airbnb"],
  "rules": {
    "linebreak-style": [
      "error",
      "windows"
    ],
    "comma-dangle": ["error", {"functions": "never"}],
    "func-names": 0,
    "function-paren-newline": 0,
    "no-underscore-dangle": 0,
    "no-nested-ternary": 0,
    "semi": 0,
    "radix": 0,
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0
  },
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  }
}
